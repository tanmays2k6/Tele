    // DOM Elements
    const menuButton = document.querySelector('.mobile-menu-btn');
    const mobileNav = document.getElementById('mobile-nav');
    const menuIcon = document.getElementById('menu-icon');
    const header = document.getElementById('header');
    const tabButtons = document.querySelectorAll('.tab-btn');
    const projectsGrid = document.getElementById('projects-grid');
    const viewAllProjectsLink = document.getElementById('view-all-projects');
    const contactForm = document.getElementById('contact-form');
    const newsletterForm = document.getElementById('newsletter-form');
    const currentYearElement = document.getElementById('current-year');

    // Set current year in footer
    currentYearElement.textContent = new Date().getFullYear();

    // Mobile Menu Toggle
    menuButton.addEventListener('click', () => {
      mobileNav.classList.toggle('active');
      if (mobileNav.classList.contains('active')) {
        menuIcon.classList.remove('fa-bars');
        menuIcon.classList.add('fa-times');
      } else {
        menuIcon.classList.remove('fa-times');
        menuIcon.classList.add('fa-bars');
      }
    });

    // Close mobile menu when a link is clicked
    document.querySelectorAll('.mobile-nav a').forEach(link => {
      link.addEventListener('click', () => {
        mobileNav.classList.remove('active');
        menuIcon.classList.remove('fa-times');
        menuIcon.classList.add('fa-bars');
      });
    });

    // Header scroll effect
    window.addEventListener('scroll', () => {
      if (window.scrollY > 10) {
        header.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
      }
    });

    // Projects Tab Functionality
    let activeCategory = 'web';

    function updateProjectsDisplay(category) {
      // Filter projects by category
      const filteredProjects = projects.filter(project => project.category === category);
      
      // Update view all projects link text
      let categoryLabel = '';
      switch(category) {
        case 'web':
          categoryLabel = 'Web Projects';
          break;
        case 'mobile':
          categoryLabel = 'Mobile Apps';
          break;
        case 'ai':
          categoryLabel = 'AI Projects';
          break;
        case 'opensource':
          categoryLabel = 'Open Source Projects';
          break;
      }
      viewAllProjectsLink.querySelector('span').textContent = `View All ${categoryLabel}`;
      
      // Clear the grid
      projectsGrid.innerHTML = '';
      
      // Check if we have projects
      if (filteredProjects.length > 0) {
        // Create project cards
        filteredProjects.forEach(project => {
          const icon = category === 'web' ? 'globe' : 
                      category === 'mobile' ? 'mobile-alt' : 
                      category === 'ai' ? 'brain' : 'code-branch';
                      
          const card = document.createElement('div');
          card.className = 'project-card';
          
          // Create tech tags HTML
          const techTagsHtml = project.technologies.map(tech => 
            `<span class="tech-tag">${tech}</span>`
          ).join('');
          
          card.innerHTML = `
            <div class="project-title">
              <i class="fas fa-${icon}"></i>
              <h3>${project.title}</h3>
            </div>
            <p>${project.description}</p>
            <div class="tech-tags">
              ${techTagsHtml}
            </div>
            <a href="${project.repoUrl}" class="project-link">
              <span>View Project</span>
              <i class="fas fa-external-link-alt"></i>
            </a>
          `;
          
          projectsGrid.appendChild(card);
        });
      } else {
        // Display a message if no projects found
        const emptyMessage = document.createElement('div');
        emptyMessage.style.gridColumn = '1 / -1';
        emptyMessage.style.textAlign = 'center';
        emptyMessage.style.padding = '2rem 0';
        emptyMessage.textContent = 'No projects available in this category yet.';
        projectsGrid.appendChild(emptyMessage);
      }
    }

    // Initialize projects display
    updateProjectsDisplay(activeCategory);

    // Tab buttons event listeners
    tabButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Remove active class from all buttons
        tabButtons.forEach(btn => btn.classList.remove('active'));
        
        // Add active class to clicked button
        button.classList.add('active');
        
        // Update active category
        activeCategory = button.dataset.tab;
        
        // Update projects display
        updateProjectsDisplay(activeCategory);
      });
    });

    // Form submissions
    contactForm.addEventListener('submit', (e) => {
      e.preventDefault();
      alert('Thank you for your message! We will get back to you soon.');
      contactForm.reset();
    });

    newsletterForm.addEventListener('submit', (e) => {
      e.preventDefault();
      alert('Thank you for subscribing to our newsletter!');
      newsletterForm.reset();
    });

    // Smooth scrolling for anchors
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function(e) {
        e.preventDefault();
        
        const targetId = this.getAttribute('href');
        if (targetId === '#') return;
        
        const targetElement = document.querySelector(targetId);
        if (targetElement) {
          window.scrollTo({
            top: targetElement.offsetTop - header.offsetHeight,
            behavior: 'smooth'
          });
        }
      });
    });
  </script>
</body>
